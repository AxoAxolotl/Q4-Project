function completeOrder() {
  if (document.getElementById("orderResult").innerHTML == document.getElementById("currentBurger").innerHTML) {
    alert("yes!")
    document.getElementById("currentBurger").innerHTML = "";
    nextOrder();
  } else {
    alert("no!")
    document.getElementById("currentBurger").innerHTML = "";
    nextOrder();
  }
}
