document.getElementById("orderResult").innerHTML = "Bun, ";

order();

function order() {
  let meat = Math.floor(Math.random() * 4);

  if (meat == 0) {
    document.getElementById("orderResult").innerHTML += "Beef, ";
  } else if (meat == 1) {
    document.getElementById("orderResult").innerHTML += "Chicken, ";
  } else if (meat == 2) {
    document.getElementById("orderResult").innerHTML += "Pork, ";
  } else if (meat == 3) {
    document.getElementById("orderResult").innerHTML += "Vegan, ";
  }
  burgerTop();
  topBun();
}

function burgerTop() {
  let ingNum = Math.floor(Math.random() * 4 + 1);

  for (var i = 0; i < ingNum; i++) {
    let ingredient = Math.floor(Math.random() * 11);
    if (ingredient == 0) {
      document.getElementById("orderResult").innerHTML += "Mayo, ";
    } else if (ingredient == 1) {
      document.getElementById("orderResult").innerHTML += "Hot Sauce, ";
    } else if (ingredient == 2) {
      document.getElementById("orderResult").innerHTML += "Cheese, ";
    } else if (ingredient == 3) {
      document.getElementById("orderResult").innerHTML += "Tomato, ";
    } else if (ingredient == 4) {
      document.getElementById("orderResult").innerHTML += "Lettuce, ";
    } else if (ingredient == 5) {
      document.getElementById("orderResult").innerHTML += "Pickle, ";
    } else if (ingredient == 6) {
      document.getElementById("orderResult").innerHTML += "Bacon, ";
    } else if (ingredient == 7) {
      document.getElementById("orderResult").innerHTML += "Ketchup, ";
    } else if (ingredient == 8) {
      document.getElementById("orderResult").innerHTML += "Mustard, ";
    } else if (ingredient == 9) {
      document.getElementById("orderResult").innerHTML += "Onion, ";
    } else if (ingredient == 10) {
      document.getElementById("orderResult").innerHTML += "Fries, ";
    }
  }
}

function topBun() {
  document.getElementById("orderResult").innerHTML += "Bun, ";
}

function nextOrder() {
  document.getElementById("orderResult").innerHTML = "Bun, ";
  order();
}

let bunAmount = 10;
function bunAdd() {
  if (bunAmount == 10) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 9";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 9) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 8";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 8) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 7";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 7) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 6";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 6) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 5";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 5) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 4";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 4) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 3";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 3) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 2";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 2) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 1";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  } else if (bunAmount == 1) {
    bunAmount--;
    document.getElementById("buns").innerHTML = "Buns - 0";
    document.getElementById("currentBurger").innerHTML += "Bun, ";
  }
}

